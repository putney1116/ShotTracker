<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/subcoursenames"
    android:orientation="vertical"
    android:background="@drawable/golfgreen"
    >
    <TextView
        android:id="@+id/holenumberscoursename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:text="Test Course Name"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/enterholenumberscoursename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/holenumberscoursename"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:text="Enter Hole Numbers for this Nine"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterholenumberscoursename"
        android:id="@+id/holenumbersradiobuttons"
        android:orientation="vertical"
        android:paddingTop="20dp"

        >
    <RadioButton
        android:id="@+id/holenumbersradioButton1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1-9"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:checked="true"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="120dp"
        android:textColor="#000000"
        android:padding="20dp"
        />
        <RadioButton
            android:id="@+id/holenumbersradioButton2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="10-18"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="120dp"
            android:padding="20dp"

            />
        <RadioButton
            android:id="@+id/holenumbersradioButton3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="19-27"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="120dp"
            android:padding="20dp"
            />
        <RadioButton
            android:id="@+id/holenumbersradioButton4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="28-36"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="120dp"
            android:padding="20dp"
            />
        <RadioButton
            android:id="@+id/holenumbersradioButton5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="37-45"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="120dp"
            android:padding="20dp"
            />
    </RadioGroup>

    <Button  android:id="@+id/holenumbersfinishbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        />
    <Button  android:id="@+id/holenumbersbackbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />


</RelativeLayout>