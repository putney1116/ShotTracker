<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/coursecatalogsubcourseselectorpage"
    android:orientation="vertical"
    android:background="@drawable/golfgreen"
    >
    <TextView
        android:id="@+id/coursecatalogsubcourseselectorcoursename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:paddingTop="10dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/coursecatalogsubcourseselectorhowmanyholes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:paddingTop="40dp"
        android:text="How many holes are you playing?"
        android:textColor="#FFFFFF" />
    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/coursecatalogsubcourseselectorhowmanyholes"
        android:id="@+id/coursecatalogsubcourseselectorradiobuttons"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="2"
            />
        <RadioButton
            android:id="@+id/coursecatalogsubcourseselectorradioButton1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="1"
            />
        <RadioButton
            android:id="@+id/coursecatalogsubcourseselectorradioButton2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="18"
            android:layout_weight="1"
            android:checked="true"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="2"
            />
    </RadioGroup>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/coursecatalogsubcourseselectorradiobuttons"
        android:orientation="horizontal"
        android:id="@+id/coursecatalogsubcourseselectorfrontbackheader"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/coursecatalogsubcourseselectorfrontbackheadername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Name"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/coursecatalogsubcourseselectorfrontbackheaderfront"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Front"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/coursecatalogsubcourseselectorfrontbackheaderback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Back"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/coursecatalogsubcourseselectorfrontbackheader"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/coursecatalogsubcourseselectorsubcoursenames"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/coursecatalogsubcourseselectorcourse1text"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text=""
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"
                android:textColor="#FFFFFF"
            />
            <TextView
                android:id="@+id/coursecatalogsubcourseselectorcourse2text"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text=""
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/coursecatalogsubcourseselectorcourse3text"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text=""
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/coursecatalogsubcourseselectorcourse4text"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text=""
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/coursecatalogsubcourseselectorcourse5text"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text=""
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/coursecatalogsubcourseselectorcourse6text"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text=""
                android:layout_weight="2"
                android:gravity="center"
                android:visibility="invisible"
                android:textColor="#FFFFFF"
                />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/coursecatalogsubcourseselectorfront9"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <RadioButton
                android:id="@+id/coursecatalogsubcourseselectorfront9radio1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="true"
                android:visibility="invisible"
                />
            <RadioButton
                android:id="@+id/coursecatalogsubcourseselectorfront9radio2"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                />
            <RadioButton
                android:id="@+id/coursecatalogsubcourseselectorfront9radio3"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                />
            <RadioButton
                android:id="@+id/coursecatalogsubcourseselectorfront9radio4"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                />
            <RadioButton
                android:id="@+id/coursecatalogsubcourseselectorfront9radio5"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                />
            <RadioButton
                android:id="@+id/coursecatalogsubcourseselectorfront9radio6"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:visibility="invisible"
                />
        </RadioGroup>
        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            />
        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/coursecatalogsubcourseselectorback9"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <RadioButton
                android:id="@+id/coursecatalogsubcourseselectorback9radio1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                />
            <RadioButton
                android:id="@+id/coursecatalogsubcourseselectorback9radio2"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:checked="true"
                />
            <RadioButton
                android:id="@+id/coursecatalogsubcourseselectorback9radio3"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                />
            <RadioButton
                android:id="@+id/coursecatalogsubcourseselectorback9radio4"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                />
            <RadioButton
                android:id="@+id/coursecatalogsubcourseselectorback9radio5"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                />
            <RadioButton
                android:id="@+id/coursecatalogsubcourseselectorback9radio6"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:visibility="invisible"
                />
        </RadioGroup>
        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
    </LinearLayout>

    <Button  android:id="@+id/coursecatalogstartroundactivitybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Course"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:padding="15dp"
        android:layout_marginBottom="30dp"
        />

</RelativeLayout>